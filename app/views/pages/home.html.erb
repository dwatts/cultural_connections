<div class="banner text-center">
   <div class="container">
     <h1 class="text-center">Cultural Connections Club</h1>
     <h2>Culture | History | People</h2>
   </div>
  <div class="container text-center pt-3">
    <%= form_tag activities_path, method: :get do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Enter a location or keyword",
              style: "border-radius: 10px"
             %>
             <%= submit_tag("Search", :class => "btn-dashboard my-3", :style => "width:100px;") %>

        <% end %>
  </div>
</div>
<br>
<div class="container text-center">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="text-center ml-5 mr-5">
      <h2 class="carousel-title">The Cultural Connections Club is a new way to find and support cultural organizations in your area</h2>
      <hr>
      <br>
      <br>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://images.portal.muenchen.de/000/000/219/203/versions/rathausgalerie-750x310.jpg" class="carousel-img" width="950" height="550">
        <div class="carousel-caption d-none d-md-block">
          <i class="fas fa-archway"></i>
          <h2 class="card-title">Find and explore cultural institutions in your city</h2>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://upload.wikimedia.org/wikipedia/commons/a/a6/Museumsinsel_M%C3%BCnchen.jpg" class="carousel-img" alt="" width="950" height="550">
        <div class="carousel-caption d-none d-md-block">
        <i class="fas fa-map-marked-alt"></i>
          <h2 class="card-title">Get to know unique cultures and places</h2>
        </div>
      </div>
        <div class="carousel-item">
        <img src="https://www.charivari.de/assets/Uploads/Deutsches-Museeum-Muenchen-oeffnet-wieder2.jpg" alt="" width="950" height="550" class="carousel-img" title="Museen in München öffnen wieder">
        <div class="carousel-caption d-none d-md-block">
        <i class="fas fa-globe-europe"></i>
          <h2 class="card-title">Connect to and support local institutions</h2>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
<br>
<br>
<br>
</div>

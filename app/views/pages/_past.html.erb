<% pastbookings = [] %>
<% current_user.bookings.each do |booking| %>
  <% if booking.date < Date.today && booking.status == true %>
    <% pastbookings << booking.date %>
    <div class="card-trip">
      <img src="https://images.unsplash.com/photo-1482245294234-b3f2f8d5f1a4?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1130&q=80" />
      <div class="card-trip-infos">
        <div>
          <h2><%= booking.activity.name%> <small>(<%= booking.date.strftime("%-d %b %Y")%>)</small></h2>
          <p><%= booking.activity.description %></p>
        </div>
        <div>
          <h2 class="card-trip-pricing"><%= booking.activity.price %>$</h2>
        </div>
      </div>
    </div>
    <br>
  <% end %>
<% end %>
<% if pastbookings.length == 0%>
  <h5>No past bookings yet</h5>
  <h6>All past bookings will be shown here.</h6>
  <br>
  <%= link_to 'Start exploring!', activities_path, class: "btn-simple" %>
<% end %>


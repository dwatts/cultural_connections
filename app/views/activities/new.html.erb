<div class="container">
  <h3 class="activity-creation my-3">Add your activity or institution to the Cultural Connections Club</h3>
  <br>
  <%= simple_form_for(@activity) do |f| %>
    <%= f.input :name, label: 'What is the name of your institution'%>
    <%= f.input :opening_hours, label: 'When is the opening time' %>
    <%= f.input :contact_number, label: 'contact info' %>
    <%= f.input :address, label: "What's the address?", placeholder: "KÃ¶nigsplatz"%>
    <%= f.input :description %>
    <%= f.input :price, input_html: {min: 0} %>
    <%= f.input :duration, input_html: {min: 0} %>
    <%= f.input :available_spots, input_html: {min: 0} %>
    <%= f.input :banner_photo, as: :file, label: "You can choose one main picture." %>
    <%= f.input :photos, as: :file, label: "You can choose up to 3 additional pictures.", input_html: { multiple: true } %>
    <%= f.submit "Submit", class: "btn btn-simple my-3" %>
  <% end %>
</div>

<h1><%= @activity.name %></h1>
   <% @activity.photos.each do |photo| %>
    <%= cl_image_tag photo.key %>
   <% end %>
   <%= link_to 'Book now!', new_activity_booking_path(@activity), class: 'btn btn-simple my-3' %>
</div>

<div class="container">
  <div class="main-info d-flex justify-content-between">
    <h6>Every day except Mondays <br>
       From 9.30 am to 6.00 pm
    </h6>
    <p>⭐⭐⭐⭐⭐<br>
      <strong>4.8</strong> out of <strong>16 ratings</strong>
    </p>
    <div class="card-product">
      <img src="http://mt0.google.com/vt/lyrs=m@189000000&hl=en&src=api&x=4828&y=6162&z=14&s=Galile" />
      <div class="card-product-infos">
        <p><%= @activity.address %></p>
      </div>
    </div>
  </div>
  <br>
  <br>
  <br>
  <div class="description mb-4">
    <h6><%= @activity.description %></h6>
  </div>
  <div class="text-center border-top py-4">
    <h3><strong>What people say about <%= @activity.name %>:</strong></h3>
    <br>
    <h3><%= @activity.name %> is amazing!</h3>
    <br>
    <h3>Will definitely visit <%= @activity.name %> again!</h3>
  </div>
</div>


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div class="text-center">
  <ol class="carousel-indicators">
      <% imageNum = @activity.photos.size %>
      <%  imageNum.times do |photo| %>
        <% counter = 0 %>
        <li data-target="#carouselExampleCaptions" data-slide-to="#{counter}" class="active"></li>
        <% counter += 1 %>
      <% end %>
    </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="card-title"><%= @activity.name %></h3>
      </div>
      <%= cl_image_tag @activity.photos[0].key, height: 450, width: 850, crop: :fill%>
    </div>
      <% rest_photos = @activity.photos[1 .. -1] %>
      <% rest_photos.each do |photo| %>
      <div class="carousel-item">
        <div class="carousel-caption d-none d-md-block">
        <h3 class="card-title"><%= @activity.name %></h3>
      </div>
        <%= cl_image_tag photo.key, height: 450, width: 850, crop: :fill%>
      </div>
      <% end %>
  </div>
  </div>
</div>

